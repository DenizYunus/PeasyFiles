; Sample Inno Setup script for PeasyFiles

[Setup]
AppName=PeasyFiles
AppVersion=1.0
DefaultDirName={pf}\PeasyFiles
DefaultGroupName=PeasyFiles
OutputDir=.
OutputBaseFilename=PeasyFilesInstaller
Compression=lzma
SolidCompression=yes
PrivilegesRequired=admin
DisableProgramGroupPage=yes

[Files]
; Add your executable and DLLs here
Source: "Path\To\Your\Executable\PeasyFiles.exe"; DestDir: "{app}"; Flags: ignoreversion
Source: "Path\To\Your\Executable\*.dll"; DestDir: "{app}"; Flags: ignoreversion

[Icons]
Name: "{group}\PeasyFiles"; Filename: "{app}\PeasyFiles.exe"
Name: "{group}\Uninstall PeasyFiles"; Filename: "{un}\unins000.exe"

[Run]
; Run the application after installation
Filename: "{app}\PeasyFiles.exe"; Description: "Launch PeasyFiles"; Flags: nowait postinstall skipifsilent

[UninstallRun]
; Optionally, you can specify actions to take on uninstall
Filename: "{app}\PeasyFiles.exe"; Parameters: "/uninstall"; Flags: runhidden