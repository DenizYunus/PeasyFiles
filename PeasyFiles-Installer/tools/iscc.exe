; Inno Setup Script for PeasyFiles

[Setup]
AppName=PeasyFiles
AppVersion=1.0
DefaultDirName={pf}\PeasyFiles
DefaultGroupName=PeasyFiles
OutputDir=.
OutputBaseFilename=PeasyFilesInstaller
Compression=lzma
SolidCompression=yes
PrivilegesRequired=admin
DisableProgramGroupPage=yes
DisableReadyPage=yes
DisableFinishedPage=yes

[Files]
; Add your executable and DLLs here
Source: "Path\To\Your\PeasyFiles.exe"; DestDir: "{app}"; Flags: ignoreversion
Source: "Path\To\Your\*.dll"; DestDir: "{app}"; Flags: ignoreversion

[Icons]
Name: "{group}\PeasyFiles"; Filename: "{app}\PeasyFiles.exe"
Name: "{commondesktop}\PeasyFiles"; Filename: "{app}\PeasyFiles.exe"; Tasks: desktopicon

[Run]
; Run the application after installation
Filename: "{app}\PeasyFiles.exe"; Description: "Launch PeasyFiles"; Flags: nowait postinstall skipifsilent

[UninstallRun]
; Optional: Run the application on uninstall
Filename: "{app}\PeasyFiles.exe"; Flags: nowait